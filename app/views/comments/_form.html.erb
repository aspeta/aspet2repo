<%= form_for [topic, post, comment], remote: true do |f| %>
  <% if comment.errors.any? %>
    <div class="alert alert-danger">
      <h4>There are <%= pluralize(comment.errors.count, "error") %>.</h4>
      <ul>
        <% comment.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <%= form_group_tag(comment.errors[:body]) do %>  
    <div class="form-group">
      <%= f.text_area :body, rows: 4, cols: 60, class: 'form-control', placeholder: "Enter Comments" %>
    </div>
  <% end %>
   <div class="form-group">
    <%= f.submit "Save", class: 'btn btn-success' %>
  </div>
<% end %> 